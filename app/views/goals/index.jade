extends ../shared/template
block content
  .row
    .col-xs-12
    table.table.table-striped.table-hover
      thead
        tr
          th Goal
          th Due
          th Tags
      tbody
        each goal in goals
          tr
            td: a(href='/goals/#{goal._id}')= goal.name
            td= goal.due
            td= goal.tags

